{% extends 'base.html.twig' %}

{% block title %}All Posts{% endblock %}

{% block body %}
<div>

{% if posts|length > 0 %}
    {% for key,post in posts %}
    <div>
        <a href="{{path('app_micro_post_show', {post: post.id})}}"> {{ post.title }} </a>
    </div>
    {% endfor %}
{% else %}
    There is nothing here!
{% endif %}
</div>
{% endblock %}
